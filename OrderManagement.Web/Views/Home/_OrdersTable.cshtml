@model List<OrderModel>
@{
    var i = 1;
}
<table class="table table-hover">
    <thead class="thead-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Название заказа</th>
        <th scope="col">Дата</th>
        <th scope="col">Поставщик</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr onclick="location.href ='@Url.Action("GetOrder", "Order", new {id = order.Id})' ">
            <th scope="row">@i</th>
            <td>@order.Name</td>
            <td>@order.Date.ToString("G")</td>
            <td>@order.Provider.Name</td>
        </tr>
        i++;
    }
    </tbody>
</table>