@model OrderModel
@{
    var count = 1;
}
<div class="card" style="width: 50rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.Date</h6>
        <table class="table table-hover" id="orderItemsTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Название:</th>
                    <th scope="col">Количество:</th>
                    <th scope="col">Unit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderItem in Model.OrderItems)
                {
                    <tr>
                        <th scope="row">@count</th>
                        <td>@orderItem.ItemName</td>
                        <td>@orderItem.Quantity</td>
                        <td>@orderItem.Unit</td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>

        <form asp-controller="Order" asp-action="ShowEditOrderForm" asp-route-id="@Model.Id" method="get">
            <div class="row">
                <input type="submit" class="btn btn-primary" value="Править" />
            </div>
        </form>

        <form asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@Model.Id" method="post">
            <div class="row">
                <input type="submit" class="btn btn-danger" value="Удалить" />
            </div>
        </form>
    </div>
</div>